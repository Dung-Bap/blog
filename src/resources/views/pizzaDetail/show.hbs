<div class="mt-4">
    <div class="row">
        <div class="col-lg-3">
            <button>Mua Pizza</button>
        </div>
        <div class="col-lg-9">
            <div class="card" style="width: 18rem">
                <img class="card-img-top" src="{{pizzaDetail.image}}" alt="Card image cap" />
                <div class="card-body">
                    <h5 class="card-title">{{pizzaDetail.createdAt}}</h5>
                    <p class="card-text">{{pizzaDetail.name}}</p>
                    <a href="#" class="btn btn-primary">{{pizzaDetail.price}}</a>
                </div>
            </div>
        </div>
    </div>
</div>
